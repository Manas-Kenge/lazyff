{
  "name": "ffwrap",
  "version": "0.1.0",
  "description": "A simple, powerful wrapper around ffmpeg for the terminal",
  "private": true,
  "license": "MIT",
  "author": "Manas Kenge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Manas-Kenge/ffwrap.git"
  },
  "homepage": "https://github.com/Manas-Kenge/ffwrap",
  "bugs": {
    "url": "https://github.com/Manas-Kenge/ffwrap/issues"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "audio",
    "media",
    "converter",
    "cli",
    "tui",
    "compression"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run packages/cli/src/cli.ts",
    "dev:tui": "bun run packages/tui/src/index.tsx",
    "dev:web": "bun run --filter @ffwrap/web dev",
    "build": "bun run --filter '@ffwrap/*' build",
    "build:cli": "bun run --filter @ffwrap/cli build",
    "build:tui": "bun run --filter @ffwrap/tui build",
    "build:web": "bun run --filter @ffwrap/web build",
    "lint": "bun run --filter @ffwrap/web lint"
  },
  "engines": {
    "node": ">=18"
  }
}
